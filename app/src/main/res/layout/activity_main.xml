<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.mmizukami.yarrworld.MainActivity"
    android:id="@+id/welcomeLinearLayout"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcome_text"
        android:id="@+id/welcomeText"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/occ_blue"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pirateImageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/occpirate"
        android:layout_weight="2"
        android:contentDescription="@string/errorMessage" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text"
        android:id="@+id/speakButton"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        />


</LinearLayout>
